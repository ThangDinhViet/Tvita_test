@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý hộ sản xuất liên kết</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Upload dữ liệu excel
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Upload", "Farm", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group formImport">
                        <input style="max-width:30px" id="inputFile" type="file" name="UploadedFile" onchange="validate_fileupload(this.value);" />
                        <hr />
                        <button class="btn btn-primary" id="importExcel" type="submit" name="Submit">Import Excel</button>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách hộ sản xuất liên kết
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table id="tbl_source" width="100%" class="table table-striped table-bordered table-hover dataTables">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Hộ sản xuất</th>
                            <th>Farm sản xuất</th>
                            <th>Ngày nhập</th>
                            <th>Giá mua gần nhất (VNĐ)</th>
                            <th>Giá hiện tại (VNĐ)</th>
                            <th>Giá bình quân (VNĐ)</th>
                            <th>Đơn vị</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Tên sản phẩm</th>
                            <th>Hộ sản xuất</th>
                            <th>Farm sản xuất</th>
                            <th>Ngày nhập</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @if (ViewBag.ProductExcelList != null)
                        {
                            foreach (var item in ViewBag.ProductExcelList)
                            {
                                <tr class="odd">
                                    <td>@item.ID</td>
                                    <td>@item.Product_Code</td>
                                    <td>@item.Product_Name</td>
                                    <td>@item.ProductionUnit_Name</td>
                                    <td>@item.Farm_Name</td>
                                    <td>@item.ProductHistory_Date.ToString("dd/MM/yyyy")</td>
                                    <td>@Math.Round(@item.ProductionUnit_PreviousPrice)</td>
                                    <td>@Math.Round(@item.ProductHistory_Price,3)</td>
                                    <td>@Math.Round(item.ProductsInFarm_AveragePrice,2)</td>
                                    <td>@item.ProductionUnit_Unit</td>
                                    
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


