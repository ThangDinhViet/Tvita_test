@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Quản lý hộ sản xuất liên kết</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Upload dữ liệu excel
            </div>
            @using (Html.BeginForm("Upload", "Farm", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <table>
                    <tr>
                        <td>File:</td>
                        <td>
                            <input type="file" name="UploadedFile" onchange="validate_fileupload(this.value);"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input id="importExcel" type="submit" name="Submit" value="Submit" />
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            
            <div class="panel-heading">
                Danh sách hộ sản xuất liên kết
            </div>
            <!-- /.panel-heading -->
            <button id="addNewProduct" class="btn btn-primary btn-add" data-toggle="modal" data-target="#addModal">Thêm mới</button>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover dataTables">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Hộ sản xuất</th>
                            <th>Farm sản xuất</th>
                            <th>Ngày nhập</th>
                            <th>Giá mua gần nhất</th>
                            <th>Giá hiện tại</th>
                            <th>Giá bình quân</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.ListProduct != null)
                        {
                            foreach (var item in ViewBag.ListProduct)
                            {
                                <tr class="odd">
                                    <td>@item.Product_ID</td>
                                    <td>@item.Product_Name</td>
                                    <td>@item.ProductUnit_Name</td>
                                    <td>@item.Farm_Name</td>
                                    <td>@item.ProductUnit_Date</td>
                                    <td>@item.Product_Price</td>
                                    <td>@item.Product_Price_Saleoff</td>
                                    <td>@item.Product_Type</td>
                                    <td>@item.Product_Type</td>
                                    <td>
                                        <button class="btn btn-danger btn-edit" data-id="@item.Product_ID">Sửa</button>
                                        <button class="btn btn-warning btn-delete" data-id="@item.Product_ID">Xóa</button>
                                    </td>
                                </tr>
                            }
                        }    
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



