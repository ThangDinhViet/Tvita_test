@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sản phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách sản phẩm
            </div>
            <!-- /.panel-heading -->
            <button id="addNewProduct" class="btn btn-primary btn-add" data-toggle="modal" data-target="#addProductModal">Thêm mới</button>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover dataTables">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã sản phẩm</th>
                            <th>Tên sản phẩm</th>
                            <th>Mô tả</th>
                            @*<th>Số lượng</th>
                            <th>Giá thành</th>
                            <th>Giá khuyến mãi</th>*@
                            <th>Chủng loại</th>
                            <th>Ảnh hiển thị</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ListProduct)
                        {
                            <tr class="odd">
                                <td>@item.Product_ID</td>
                                <td>@item.Product_Code</td>
                                <td>@item.Product_Name</td>
                                <td class="center">@item.Product_Description</td>
                                @*<td class="center">@item.Product_Quantity</td>
                                <td>@item.Product_Price</td>
                                <td>@item.Product_Price_Saleoff</td>*@
                                <td>@item.Product_Type</td>
                                <td></td>
                                <td>
                                    <button class="btn btn-danger btn-edit" data-id="@item.Product_ID">Sửa</button>
                                    <button class="btn btn-warning btn-delete" data-id="@item.Product_ID">Xóa</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!--Modal-->
<div class="modal fade" id="addProductModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content panel panel-primary">
            <div class="modal-header panel-heading">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm mới sản phẩm</h4>
            </div>
            <div class="modal-body panel-body">
                <div class="form-group">
                    <div>
                        <label>Mã sản phẩm</label>
                        <input id="productCode" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Tên sản phẩm</label>
                        <input id="productName" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Mô tả</label>
                        <input id="productDescription" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Số lượng</label>
                        <input id="productQuantity" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Giá thành</label>
                        <input id="productPrice" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Giá khuyến mãi</label>
                        <input id="productSaleoffPrice" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Chủng loại</label>
                        <input id="productType" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Số lượng</label>
                        <input id="productQuantity" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Nhóm sản phẩm</label>
                        <input id="productGroup" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Nguồn gốc</label>
                        <input id="productOriginal" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Quy cách đóng gói</label>
                        <input id="productPakage" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Hướng dẫn sử dụng</label>
                        <input id="productGuide" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Hướng dẫn bảo quản</label>
                        <input id="productPreserve" class="form-control">
                    </div>
                    @using (Html.BeginForm("Upload", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="lineInput">
                            <label>Ảnh</label>
                            <input type="file" multiple name="UploadedPicture" onchange="validate_fileuploadpicture(this.value);" />
                            <input style="margin-top: 10px" id="importPicture" type="submit" name="Submit" value="Lưu ảnh" />
                        </div>
                    }
                    @*<div class="lineInput">
                        <label>Ngày vào</label>
                        <div class='input-group date'>
                            <input id="employeeDateCreated" type='text' class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>*@
                </div>
            </div>
            <div class="modal-footer panel-footer">
                <button id="saveNewProduct" type="button" class="btn btn-default btn-save" data-dismiss="modal">Lưu</button>
                <button type="button" class="btn btn-default btn-cancel" data-dismiss="modal">Hủy</button>
            </div>
        </div>

    </div>
</div>



