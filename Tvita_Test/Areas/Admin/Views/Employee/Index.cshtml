@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Nhân viên</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách nhân viên
            </div>
            <!-- /.panel-heading -->
            <button id="addNewEmployee" class="btn btn-primary btn-add" data-toggle="modal" data-target="#addEmployeeModal">Thêm mới</button>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover dataTables">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã nhân viên</th>
                            <th>Tên nhân viên</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                            <th>Ngày vào</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ListEmployee)
                        {
                            <tr class="odd">
                                <td>@item.ID</td>
                                <td>@item.Employee_Code</td>
                                <td>@item.Employee_Name</td>
                                <td class="center">@item.Employee_Phone</td>
                                <td class="center">@item.Employee_Address</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <button class="btn btn-danger btn-edit" data-id="@item.ID">Sửa</button>
                                    <button class="btn btn-warning btn-delete" data-id="@item.ID">Xóa</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!--Modal-->
<div class="modal fade" id="addEmployeeModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content panel panel-primary">
            <div class="modal-header panel-heading">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm mới nhân viên</h4>
            </div>
            <div class="modal-body panel-body">
                <div class="form-group">
                    <div>
                        <label>Mã nhân viên</label>
                        <input id="employeeCode" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Tên nhân viên</label>
                        <input id="employeeName" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>SĐT</label>
                        <input id="employeePhone" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Địa chỉ</label>
                        <input id="employeeAddress" class="form-control">
                    </div>
                    <div class="lineInput">
                        <label>Ngày vào</label>
                        <div class='input-group date'>
                            <input id="employeeDateCreated" type='text' class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer panel-footer">
                <button id="saveNewEmployee" type="button" class="btn btn-default btn-save" data-dismiss="modal">Lưu</button>
                <button type="button" class="btn btn-default btn-cancel" data-dismiss="modal">Hủy</button>
            </div>
        </div>

    </div>
</div>



