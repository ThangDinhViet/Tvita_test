@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Nhân viên</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách nhân viên
            </div>
            <!-- /.panel-heading -->
            <button id="addNewEmployee" class="btn btn-primary btn-add" data-toggle="modal" data-target="#addModal">Thêm mới</button>
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th class="col-md-2">STT</th>
                            <th>Mã nhân viên</th>
                            <th>Tên nhân viên</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                            <th>Ngày vào</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ListEmployee)
                        {
                            <tr class="odd">
                                <td>@item.ID</td>
                                <td>@item.Employee_Code</td>
                                <td>@item.Employee_Name</td>
                                <td class="center">@item.Employee_Phone</td>
                                <td class="center">@item.Employee_Address</td>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <button class="btn btn-danger btn-edit" data-id="@item.ID">Sửa</button>
                                    <button class="btn btn-warning btn-delete" data-id="@item.ID">Xóa</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



