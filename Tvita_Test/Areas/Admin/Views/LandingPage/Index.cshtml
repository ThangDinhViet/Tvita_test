@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Danh sách khách hàng đặt hàng</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách khách hàng đặt hàng
            </div>
            <!-- /.panel-heading -->
            @*<button id="addNewEmployee" class="btn btn-primary btn-add" data-toggle="modal" data-target="#addEmployeeModal">Thêm mới</button>*@
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover dataTables">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên khách hàng</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                            <th>Note</th>
                            <th>Thời gian giao hàng</th>
                            <th>Hộp quà Xuân An Khang</th>
                            <th>Hộp quà Phú Quý</th>
                            <th>Hộp quà Phúc Lộc</th>
                            <th>Thành tiền</th>
                            <th>Đã xử lý hay chưa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.ListOrder)
                        {
                            <tr class="odd">
                                <td>@item.Order_ID</td>
                                <td>@item.Customer_Name</td>
                                <td>@item.Customer_PhoneNum</td>
                                <td>@item.Customer_Address</td>
                                <td>@item.Customer_Note</td>
                                <td>@item.Time_Delivery.ToString("dd/MM/yyyy")</td>
                                <td align="center">@item.QuantityPro1</td>
                                <td align="center">@item.QuantityPro2</td>
                                <td align="center">@item.QuantityPro3</td>
                                <td>@item.TotalPrice</td>
                                @if (item.Is_Confirmed == true)
                                {
                                    <td align="center"><i class="fa fa-check"></i></td>
                                }
                                else
                                {
                                    <td align="center"><i class="fa fa-close"></i></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
