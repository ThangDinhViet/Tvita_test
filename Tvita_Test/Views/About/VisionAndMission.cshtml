
@{
    ViewBag.Title = "Tầm nhìn sứ mệnh";
}

<link href="@Url.Content("~/Content/css/history.css")" rel="stylesheet">
<div class="container">
    <div class="row">
        <div class="tech-cover">
            <img src="@Url.Content("~/Content/images/photos/transparent-1280x594.png")" style="background-image: url(@Url.Content("~/Content/images/photos/history-cover-bg.png"))">
        </div>
        <div class="tech-cover-title">
            <div class="article-created-date">
                <span>28.10.2017</span>
            </div>
            <div class="t-label">
                <span>Tầm nhìn - sứ mệnh</span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="content-container">
            <div class="content">
                <img class="" src="@Url.Content("~/Content/images/photos/VisionAndMission.png")" style="width: 100%;">
            </div>
            <div class="related-articles">
                <div class="list-title">
                    <span>Giới thiệu</span>
                </div>
                <div class="related-list-item">
                    <ul>
                        <li class="@(Utilities.menuIsActive("History", "About") ? "active" : "")"><i class="fa fa-angle-double-right" aria-hidden="true"></i><a href="@Url.Action("History", "About")">Lịch sử hình thành</a></li>
                        <li class="@(Utilities.menuIsActive("About", "VisionAndMission") ? "active" : "")"><i class="fa fa-angle-double-right" aria-hidden="true"></i><a href="@Url.Action("VisionAndMission", "About")">Tầm nhìn - sứ mệnh</a></li>
                        <li class="@(Utilities.menuIsActive("Home", "Value") ? "active" : "")"><i class="fa fa-angle-double-right" aria-hidden="true"></i><a href="@Url.Action("Value", "Home")">Chuỗi giá trị</a></li>
                        <li class="@(Utilities.menuIsActive("Quality", "About") ? "active" : "")"><i class="fa fa-angle-double-right" aria-hidden="true"></i><a href="@Url.Action("Quality", "About")">Tiêu chuẩn chất lượng</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="@Url.Content("~/Scripts/tvita/history.js")" type="text/javascript"></script>
}