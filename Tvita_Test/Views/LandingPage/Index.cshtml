<div class="container-fluid p-0">
    <header class="header">
        <div class="container">
            <div class="d-flex align-items-center top-header">
                <a href="/">
                    <img src="@Url.Content("~/Content/images/landingpage/logo.png")" alt="logo">
                </a>
                <a href="" class="ml-auto">
                    <img src="@Url.Content("~/Content/images/landingpage/hotline.png")" alt="hotline">
                </a>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" id="main-nav">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto ml-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-href" href="#abouts">Giới thiệu <span class="sr-only">(current)</span></a>
                    </li>
